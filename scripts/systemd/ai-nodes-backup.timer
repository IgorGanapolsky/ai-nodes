[Unit]
Description=AI Nodes Daily Backup Timer
Documentation=https://github.com/your-org/ai-nodes
Requires=ai-nodes-backup.service

[Timer]
# Run daily at 2:00 AM
OnCalendar=*-*-* 02:00:00

# Run immediately if the system was off when the timer should have run
Persistent=true

# Randomize the start time by up to 30 minutes to avoid system load spikes
RandomizedDelaySec=1800

[Install]
WantedBy=timers.target