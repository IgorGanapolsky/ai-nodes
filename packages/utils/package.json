{
  "name": "@depinautopilot/utils",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared utilities and helper functions for DePIN Autopilot",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "zod": "^4.1.11",
    "dotenv": "^17.2.3",
    "pino": "^10.0.0",
    "pino-pretty": "^13.1.1",
    "date-fns": "4.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "typescript": "^5.9.3",
    "eslint": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4"
  },
  "keywords": [
    "utilities",
    "helpers",
    "shared",
    "common"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
