{
  "name": "@depinautopilot/notify",
  "version": "1.0.0",
  "description": "Notification system for Discord, email, and other channels",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@depinautopilot/core": "workspace:*",
    "@depinautopilot/utils": "workspace:*",
    "discord.js": "^14.14.1",
    "nodemailer": "^7.0.6",
    "resend": "^6.1.0",
    "twilio": "^5.10.1",
    "axios": "^1.6.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/nodemailer": "^7.0.1",
    "typescript": "^5.3.3",
    "eslint": "^9.36.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "vitest": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4"
  },
  "keywords": [
    "notifications",
    "discord",
    "email",
    "sms",
    "alerts"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
