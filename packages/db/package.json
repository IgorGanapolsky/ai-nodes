{
  "name": "@depinautopilot/db",
  "version": "1.0.0",
  "description": "Database layer with Drizzle ORM and SQLite for DePIN Autopilot",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/seed.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.6",
    "better-sqlite3": "^12.4.1",
    "drizzle-kit": "^0.31.5"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@types/better-sqlite3": "^7.6.8",
    "typescript": "^5.9.3",
    "tsx": "^4.20.6",
    "eslint": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "database",
    "drizzle",
    "sqlite",
    "orm"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
